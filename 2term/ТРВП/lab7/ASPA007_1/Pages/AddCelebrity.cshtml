@page
@model ASPA007_1.Pages.AddCelebrityModel
@{
    ViewData["Title"] = "Add Celebrity";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .header-image {
            display: block;
            margin: 0 auto 20px;
            max-width: 100px;
        }

        h1 {
            color: #333;
            margin-bottom: 30px;
            text-align: center;
        }

        .links {
            margin-bottom: 30px;
            text-align: center;
        }

        a {
            font-size: 20px;
            color: dodgerblue;
            margin: 0 10px;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input[type="text"], select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .file-input {
            margin-bottom: 10px;
        }

        .btn-submit {
            background-color: dodgerblue;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .btn-submit:hover {
            background-color: #0077ea;
        }

        hr {
            margin-top: 30px;
        }

        footer {
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
<div class="container">
    <img src="/celebrities/diamond.png" alt="Diamond" class="header-image"/>

    <h1>Celebrities Dictionary Internet Service</h1>

    <div class="links">
        <a href="/">Home</a>
        <a href="#">Life events</a>
    </div>

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <input name="FullName" placeholder="Celebrity full name" required/>
        </div>

        <div class="form-group">
            <select id="countries" name="Nationality" required>
                <option value="">-- Select Nationality --</option>
                @foreach (var country in Model.Countries)
                {
                    <option value="@country.Value">@country.Text</option>
                }
            </select>
        </div>

        <div class="form-group">
            <input type="file" name="Photo" asp-for="Photo" class="file-input" required accept="image/*"/>
        </div>

        <div class="form-group">
            <button type="submit" class="btn-submit">Create Celebrity</button>
        </div>
    </form>
    <hr/>
    <footer>
        <p>Copyright BSTU <i>Development</i></p>
    </footer>
</div>
</body>
</html>