@page
@model ASPA007_1.Pages.Index
@{
    ViewData["Title"] = "Celebrities";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f5f5f5;
        }

        .celebrities-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            margin-top: 40px;
        }

        .celebrity-card {
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            background-color: white;
            transition: transform 0.2s;
            cursor: pointer;
        }

        .celebrity-card:hover {
            transform: scale(1.03);
        }

        .celebrity-card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 5px;
        }

        h1 {
            color: #333;
            margin-bottom: 30px;
        }

        h2 {
            margin-top: 10px;
            text-align: center;
        }

        a {
            font-size: 20px;
            color: dodgerblue;
            text-decoration: none;
        }

        .links {
            margin-bottom: 20px;
        }

        .links a {
            margin-right: 15px;
        }

        footer {
            margin-top: 30px;
            text-align: center;
        }
    </style>
</head>
<body>
<h1>Celebrities Dictionary Internet Service</h1>
<div class="links">
    <a href="/">Home</a>
    <a>Life events</a>
</div>
<div class="celebrities-container">
    <a href="/AddCelebrity">
        <div class="celebrity-card">
            <img src="/celebrities/diamond.png"/>
        </div>
    </a>

    @foreach (var celebrity in Model.Celebrities)
    {
        <a href="/ViewCelebrity/@celebrity.Id">
            <div class="celebrity-card">
                <img src="/celebrities/@(celebrity.ReqPhotoPath)" alt="@celebrity.FullName"/>
                <h2>@celebrity.FullName</h2>
            </div>
        </a>
    }
</div>

<hr/>
<footer>
    <p>Copyright BSTU <i>Development</i></p>
</footer>
</body>
</html>